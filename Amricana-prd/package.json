{
  "name": "ssdp-platform",
  "version": "1.0.0",
  "description": "Smart Sweet Distribution Platform - Empowering Saudi Arabia's sweet distribution market",
  "main": "index.js",
  "scripts": {
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:mobile\" \"npm run dev:services\"",
    "dev:web": "cd apps/ssdp-web && npm run dev",
    "dev:mobile": "cd apps/ssdp-mobile && npm start",
    "dev:services": "cd services && docker-compose up -d",
    "build": "npm run build:web && npm run build:mobile",
    "build:web": "cd apps/ssdp-web && npm run build",
    "build:mobile": "cd apps/ssdp-mobile && npm run build",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "saudi-arabia",
    "distribution",
    "sweets",
    "ai",
    "bilingual",
    "zatca",
    "vision-2030"
  ],
  "author": "BrainSAIT <info@brainsait.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fadil369/Americana-pro.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "workers/*",
    "packages/*"
  ]
}
